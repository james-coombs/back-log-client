<div class="col-sm-12 back-logs-table">
  <div>
    <form id="updateLogForm">
      {{#each log}}
          <div class="row">
            <div class="col-sm-2">
              <h6>{{title}}</h6>
            </div>
            <div class="col-sm-2">
              <h6>{{platform}}</h6>
            </div>
            <div class="col-sm-2">
              <input class="log-update-text" name="log[players]" type="text" value="{{players}}" placeholder="{{players}}">
            </div>
            <div class="col-sm-2">
              <input class="log-update-text" name="log[stage]" type="text" value="{{stage}}" placeholder="{{stage}}">
            </div>
            <div class="col-sm-2">
              <input class="log-update-text" name="log[notes]" type="text" value="{{notes}}" placeholder="{{notes}}">
            </div>
            <div class="col-sm-2">
              <input type="Submit" class="back-log-button" value="Update Log">
              <button class="delete-log" id="{{id}}" data-control="deleteLog">Delete</button>
            </div>
          </div>
        {{/each}}
      </form>
  </div>
</div>
